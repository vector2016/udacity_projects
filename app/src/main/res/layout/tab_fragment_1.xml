<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/tab_fragment1_tag">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/info0"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            >

            <demo.example.com.customarrayadapter.customviews.FutureStudioView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/custom_view"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="false"
                android:adjustViewBounds="true"
                android:layout_gravity="top"
                android:foregroundGravity="top"
                android:textSize="16sp"/>
            <!--include
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/common_item_layout" /-->

            <ImageView android:id = "@+id/text_image01"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_below="@id/custom_view"
                />
            <!--ImageView android:id = "@+id/text_image02"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/custom_view"
                /-->
            <TextView android:id="@+id/date_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/text_view_date_right_padding"
                android:background="#750A0A"
                android:layout_below ="@id/custom_view"
                />
            <TextView android:id="@+id/duration_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/text_view_duration_right_padding"
                android:background="#450ABA"
                android:layout_below ="@id/date_view"
                />

            <TextView android:id="@+id/ratings_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/text_view_ratings_right_padding"
                android:layout_alignParentEnd="true"
                android:background="#33FF00"
                android:layout_below ="@id/duration_view"
                />

            <Button android:id="@+id/favorites_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/favorites_button_right_padding"
                android:layout_below = "@id/ratings_view"
                />

             <TextView android:id="@+id/message_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below ="@id/favorites_button"
                />
        </RelativeLayout>
    </ScrollView>
    <!-- -->
</RelativeLayout>